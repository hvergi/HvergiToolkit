@page "/Players"
@using HvergiToolkit.Models
@inject FolderService Folders
@inject PlayerService PlayersData

<RadzenText TextStyle="TextStyle.H4">Wurm Players</RadzenText>
@if(!Folders.IsAtleastOnePathValid){
    <RadzenText TextStyle="TextStyle.H2">You Must Setup Atleast 1 Wurm Folder.</RadzenText>
}else{
    <RadzenRow class="rz-p-1">
        <RadzenColumn>
            <RadzenText TextStyle="TextStyle.H5">Wurm Online</RadzenText>
            @if(!Folders.IsWurmOnlinePathVaild){
                <RadzenText TextStyle="TextStyle.H6" class="rz-color-danger">Folder Not Setup</RadzenText>
            }else{
                @if(PlayersData.WurmPlayerModels.Count == 0)
                {
                    <RadzenText TextStyle="TextStyle.H6" class="rz-color-danger">No Players Found</RadzenText>
                }else
                {
                    <RadzenStack Orientation="Orientation.Vertical" Gap="4px">
                        @foreach (PlayerModel playerModel in PlayersData.WurmPlayerModels)
                        {
                            <RadzenCard>
                                <RadzenText>@playerModel.PlayerName</RadzenText>
                            </RadzenCard>
                        }
                    </RadzenStack>
                }
            }
        </RadzenColumn>
        <RadzenColumn>
            <RadzenText TextStyle="TextStyle.H5">Steam</RadzenText>
            @if (!Folders.IsWurmSteamPathVaild)
            {
                <RadzenText TextStyle="TextStyle.H6" class="rz-color-danger">Folder Not Setup</RadzenText>
            }
            else
            {
                @if (PlayersData.SteamPlayerModels.Count == 0)
                {
                    <RadzenText TextStyle="TextStyle.H6" class="rz-color-danger">No Players Found</RadzenText>
                    
                }
                else
                {
                    <RadzenStack Orientation="Orientation.Vertical" Gap="4px">
                    @foreach(PlayerModel playerModel in PlayersData.SteamPlayerModels)
                    {
                        <RadzenCard>
                            <RadzenText>@playerModel.PlayerName</RadzenText>
                        </RadzenCard>
                    }
                    </RadzenStack>
                }
            }
        </RadzenColumn>
    </RadzenRow>
}