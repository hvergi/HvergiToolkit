@page "/SkillTracker"
@inject PlayerService PlayersData

<RadzenText TextStyle="TextStyle.H4">Skill Tracker</RadzenText>

@if(PlayersData.PlayerCount == 0)
{
    <RadzenText TextStyle="TextStyle.H2">No players found to track.</RadzenText>
}
else
{
    <RadzenText TextStyle="TextStyle.H2">@PlayersData.PlayerCount</RadzenText>
    <RadzenButton Click="OpenSkillTracker">Open Tracker</RadzenButton>
}

