@page "/Folder"
@inject FolderService Folders
@inject IDirectoryPicker DPicker

<RadzenText TextStyle="TextStyle.H5">Wurm Data Folders</RadzenText>
<RadzenStack Orientation="Orientation.Horizontal" class="rz-border-radius-6 rz-border-black rz-pt-2 rz-px-3 rz-background-color-primary">
    @if (Folders.IsWurmOnlinePathVaild)
    {
        <RadzenIcon Icon="check_box" IconColor="@Colors.Success" />
    }else{
        <RadzenIcon Icon="disabled_by_default" IconColor="@Colors.Danger"/>
    }
    <RadzenText>
        <strong>Wurm Online Data Path: </strong>
    </RadzenText>
    <RadzenText TextStyle="TextStyle.Body1">
        @if (Folders.IsWurmOnlinePathVaild)
        {
            @Folders.WurmOnlinePath
        }
        else
        {
            @Folders.OnlineStatus
        }
    </RadzenText>
</RadzenStack>

<RadzenButton Click="SetupWurm" ButtonStyle="ButtonStyle.Secondary" Size="ButtonSize.Large" Style="width:100%" class="rz-mb-3">Setup Wurm Folder Path</RadzenButton>
<RadzenButton Click="AutoWurm" ButtonStyle="ButtonStyle.Secondary" Size="ButtonSize.Large" Style="width:100%" class="rz-mb-3">Auto Setup Wurm Folder Path</RadzenButton>
<RadzenButton Click="OpenOnlineFolder" ButtonStyle="ButtonStyle.Secondary" Size="ButtonSize.Large" Style="width:100%" class="rz-mb-3">Open Folder</RadzenButton>

<RadzenStack Orientation="Orientation.Horizontal" class="rz-border-radius-6 rz-border-black rz-pt-2 rz-px-3 rz-background-color-primary">
    @if (Folders.IsWurmSteamPathVaild)
    {
        <RadzenIcon Icon="check_box" IconColor="@Colors.Success" />
    }else{
        <RadzenIcon Icon="disabled_by_default" IconColor="@Colors.Danger"/>
    }
    <RadzenText>
        <strong>Wurm Steam Data Path: </strong>
    </RadzenText>
    <RadzenText TextStyle="TextStyle.Body1">
        @if (Folders.IsWurmSteamPathVaild){ @Folders.WurmSteamPath}else{ @Folders.SteamStatus}
    </RadzenText>
</RadzenStack>
<RadzenButton Click="SetupSteam" ButtonStyle="ButtonStyle.Secondary" Size="ButtonSize.Large" Style="width:100%" class="rz-mb-3">Setup Steam Folder Path</RadzenButton>
<RadzenButton Click="AutoSteam" ButtonStyle="ButtonStyle.Secondary" Size="ButtonSize.Large" Style="width:100%" class="rz-mb-3">Auto Setup Steam Folder Path</RadzenButton>
<RadzenButton Click="OpenSteamFolder" ButtonStyle="ButtonStyle.Secondary" Size="ButtonSize.Large" Style="width:100%" class="rz-mb-3">Open Folder</RadzenButton>