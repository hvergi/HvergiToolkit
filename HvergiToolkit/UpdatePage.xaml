<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HvergiToolkit;assembly=HvergiToolkit"
             xmlns:blazorweb="clr-namespace:Microsoft.AspNetCore.Components.Web;assembly=Microsoft.AspNetCore.Components.Web"
             BackgroundColor="DarkGray"
             BindingContext="UpdatePage"
             x:Name="this"
             x:Class="HvergiToolkit.UpdatePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" /> 
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        <Label Text="Hvergi's Toolkit Updater"
               Grid.Column="1"
               Grid.Row="1"
               FontSize="Title"
               HorizontalOptions="CenterAndExpand"/>
        <Label Text="{Binding  Status,Source={x:Reference this}}"
               Grid.Column="1"
               Grid.Row="2"
               FontSize="Subtitle"
               HorizontalOptions="CenterAndExpand"/>
        <Label
               Text="{Binding  UpdatePercent,Source={x:Reference this}}"
               Grid.Column="1"
               Grid.Row="3"
               FontSize="Subtitle"
               HorizontalOptions="CenterAndExpand"/>
    </Grid>

</ContentPage>